                        },
                        {
                            "field": "Microsoft.Compute/virtualMachines/sku.name",
                            "in": [
                                "Standard_D2s_v3"
                            ]
                        },
                        {
                            "field": "name",
                            "in": [
                                "TestVM1"
                            ]
                        },
                        {
                            "field": "id",
                            "contains": "/resourceGroups/ResourceGroup1/"                      
                        },
                        {
                            "field": "location",
